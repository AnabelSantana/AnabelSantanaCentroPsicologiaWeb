---
import Badge from "./badge.astro";

const {
    img,
    title,
    member,
    position,
    badges,
    girl
} = Astro.props;
---
<div class="relative">

  <div
    class="w-80 md:w-auto max-w-sm bg-white border border-gray-200 rounded-lg shadow-lg dark:bg-gray-800 dark:border-gray-700 hover:shadow-corporate
           transform transition-transform duration-300 hover:scale-105"
  >
      <img
        class="rounded-t-lg w-full h-80 object-cover"
        src={img}
        alt={title}
      />
    <div class="p-5">
      <h3
        class="text-2xl md:text-3xl font-bold font-merriweather text-corporate tracking-tight"
      >
        {title}
      </h3>
      {member ? (
        <p class="mb-3 text-base md:text-lg text-gray-500 font-lora">
          {girl ? "Colegiada" : "Colegiado"} {member}
        </p>
      ) : (
        <p class="mb-3 text-base md:text-lg text-gray-500 font-lora">
          {position}
        </p>
      )}
      <h3
        class="text-lg md:text-xl font-bold font-merriweather text-corporate tracking-tight mb-2"
      >
        {girl ? "Especializada en:" : "Especializado en:"}
      </h3>
      <div class="w-full">
        <div class="flex flex-wrap gap-4 font-lora">
          {badges?.map((badge: string) => (
            <Badge title={badge} />
          ))}
        </div>
      </div>
    </div>
  </div>