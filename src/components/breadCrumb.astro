---
import type { BreadcrumbItem } from '../model/types';
interface Props {
    items: BreadcrumbItem[];
}

const { items } = Astro.props;
---

<div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-2 lg:-mb-4 pt-4'>
    <ol
        class='inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse'
    >
        {
            items.map((item, index) => (
                <li class='inline-flex items-center'>
                    {index < items.length - 1 ? (
                        <a
                            href={item.link}
                            class='inline-flex items-center font-montserrat text-sm lg:text-base font-semibold text-gray-500 hover:text-corporate hover:font-bold font-lora'
                        >
                            {item.title}
                        </a>
                    ) : (
                        <span class='font-montserrat text-sm lg:text-base font-semibold text-gray-500 font-lora'>
                            {item.title}
                        </span>
                    )}
                    {index < items.length - 1 && (
                        <svg
                            class='rtl:rotate-180 w-3 h-3 text-gray-500 mx-1 ml-2 mr-2'
                            aria-hidden='true'
                            xmlns='http://www.w3.org/2000/svg'
                            fill='none'
                            viewBox='0 0 6 10'
                        >
                            <path
                                stroke='currentColor'
                                stroke-linecap='round'
                                stroke-linejoin='round'
                                stroke-width='2'
                                d='m1 9 4-4-4-4'
                            />
                        </svg>
                    )}
                </li>
            ))
        }
    </ol>
</div>
