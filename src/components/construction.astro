---
import Button from "./button.astro";

const { title = "Página en construcción", message = "Estamos trabajando en realizar la página web de nuestro centro de psicología. Muy pronto encontrarás toda la información y cómo podemos ayudarte." } = Astro.props;
---

<section class="flex items-center justify-center bg-gray-100 px-4 h-auto w-full mt-40 mb-20">
  <div class="text-center max-w-lg px-6 py-8 bg-white shadow-lg rounded-lg">
    <h1 class="text-2xl md:text-4xl font-semibold font-merriweather text-gray-800 mb-4">{title}</h1>
    <p class="text-gray-700 text-lg mb-6 font-lora">{message}</p>
    <p class="text-gray-700 font-lora mb-4 text-lg">
      Si necesitas más información
    </p>
    <div class="flex justify-center">
        <Button href="https://wa.me/+34664206762" title="Contactar" />
    </div>
  </div>
</section>
