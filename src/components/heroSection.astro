---
const { image, title } = Astro.props;
---

<section
  class='relative h-[40vh] md:h-[65vh] bg-cover bg-center mt-16'
  style={`background-image: url('${image}');`}
>
  <div class="absolute inset-0 bg-gradient-to-b from-black/50 to-primary/25 opacity-50 z-0"></div>
  <div class='relative flex items-center justify-center h-full'>
    <h1
      class='text-4xl md:text-5xl lg:text-6xl font-medium text-white text-center font-merriweather pt-16 md:pt-10 text-shadow-lg'
    >
        {title}
    </h1>
  </div>
</section>