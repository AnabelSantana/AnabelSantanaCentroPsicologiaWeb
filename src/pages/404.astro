---
import Layout from "../layouts/Layout.astro";
import Button from "../components/button.astro";
---

<Layout
    title="Error 404 |  Anabel Santana - Centro de Psicología"
    description="Page Not Found"
    withfooter={false}
    withheader={false}
>
    <section
        class="flex flex-col items-center justify-center h-screen text-center text-gray-800"
    >
        <div class="w-80 md:w-88 h-auto mx-auto">
            <img
                src="/images/logoWithText.webp"
                alt="Error 404"
                class="object-cover"
            />
        </div>
        <div>
            <h2
                class="text-6xl md:text-9xl font-extrabold font-lora text-primary"
            >
                404
            </h2>
            <div
                class="flex items-center justify-center mt-10 mb-4 px-6 md:px-4 font-merriweather font-medium text-lg md:text-xl"
            >
                Lo sentimos, la página que buscas no se pudo encontrar.
            </div>
        </div>
        <div class="">
            <Button href="/" title="Volver al inicio" />
        </div>
    </section>
</Layout>
